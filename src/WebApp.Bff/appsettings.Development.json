{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "basket": {
        "ClusterId": "basket",

        "Match": {
          "Path": "/api/basket/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "catalog": {
        "ClusterId": "catalog",

        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "ordering": {
        "ClusterId": "ordering",

        "Match": {
          "Path": "/api/ordering/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "webhooks": {
        "ClusterId": "webhooks",

        "Match": {
          "Path": "/api/webhooks/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "basket": {
        "Destinations": {
          "destination1": {
            "Address": "https://basket.api:5101"
          }
        }
      },
      "catalog": {
        "Destinations": {
          "destination1": {
            "Address": "https://catalog.api:5103"
          }
        }
      },
      "ordering": {
        "Destinations": {
          "destination1": {
            "Address": "https://ordering.api:5105"
          }
        }
      },
      "webhooks": {
        "Destinations": {
          "destination1": {
            "Address": "https://webhooks.api:5109"
          }
        }
      }
    },
    "HttpClient": {
      "DangerousAcceptAnyServerCertificate": true
    }
  },
  "ClientUrl": "http://webapp:80"
}
