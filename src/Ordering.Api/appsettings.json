{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Host": {
    "ServicesStartConcurrently": true,
    "ServicesStopConcurrently": true,
    "StartupTimeout": 45,
    "ShutdownTimeout": "00:00:45"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.json",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://localhost:4317",
          "protocol": 0,
          "resourceAttributes": {
            "service.name": "Ordering"
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName" ],
    "Properties": {
      "ApplicationName": "Ordering Service"
    }
  },
  "OpenApiInfo": {
    "v1": {
      "Title": "Ordering Service",
      "Version": "v1",
      "Description": "Ordering Service",
      "TermsOfService": "https://dotnet.microsoft.com/en-us/",
      "Contact": {
        "Name": "Ordering Service",
        "Email": "",
        "Url": "https://dotnet.microsoft.com/en-us/"
      },
      "License": {
        "Name": "Use under LICX",
        "Url": "https://dotnet.microsoft.com/en-us/"
      }
    }
  },
  "ClientOrigins": {},
  "ConnectionStrings": {
    "Database": "",
    "Redis": ""
  },
  "RetryOptions": {
    "Retry": {
      "BackoffType": "Linear",
      "UseJitter": false,
      "MaxRetryAttempts": 7
    }
  },
  "Identity": {
    "Audience": "ordering",
    "Providers": {
      "Azure": {
        "Enabled": true,
        "Authority": "https://my_tenant.b2clogin.com/my_tenant.onmicrosoft.com",
        "Scopes": {
          "orders": "Ordering API"
        }
      },
      "AWS": {
        "Enabled": false,
        "Authority": "https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX",
        "Scopes": {
          "orders": "Ordering API"
        }
      },
      "GCD": {
        "Enabled": false,
        "Authority": "https://accounts.google.com",
        "Scopes": {
          "orders": "Ordering API"
        }
      },
      "Keycloak": {
        "Enabled": false,
        "Authority": "https://keycloak.example.com/auth/realms/myrealm",
        "Scopes": {
          "orders": "Ordering API"
        }
      }
    }
  }
}